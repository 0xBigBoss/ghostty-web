{
  "name": "@0xbigboss/ghostty-web",
  "version": "0.4.0",
  "description": "Web-based terminal emulator using Ghostty's VT100 parser via WebAssembly. Fork with enhanced selection handling.",
  "keywords": [
    "ansi",
    "ghostty",
    "terminal",
    "terminal-emulator",
    "tty",
    "vscode",
    "vt100",
    "wasm",
    "web",
    "webassembly",
    "xterm"
  ],
  "homepage": "https://github.com/0xBigBoss/ghostty-web#readme",
  "bugs": "https://github.com/0xBigBoss/ghostty-web/issues",
  "license": "MIT",
  "author": "0xBigBoss",
  "contributors": [
    "Coder (https://github.com/coder)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/0xBigBoss/ghostty-web.git"
  },
  "files": [
    "dist",
    "ghostty-vt.wasm",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/ghostty-web.umd.cjs",
  "module": "./dist/ghostty-web.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ghostty-web.js",
      "require": "./dist/ghostty-web.umd.cjs"
    },
    "./ghostty-vt.wasm": "./ghostty-vt.wasm"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite --port 8000",
    "demo": "node demo/bin/demo.js",
    "demo:dev": "node demo/bin/demo.js --dev",
    "prebuild": "bun install",
    "build": "bun run clean && bun run build:wasm && bun run build:lib && bun run build:wasm-copy",
    "build:wasm": "./scripts/build-wasm.sh",
    "build:lib": "vite build",
    "build:wasm-copy": "cp ghostty-vt.wasm dist/",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "test": "bun test lib",
    "test:playwright": "playwright test -c playwright.config.ts",
    "test:playwright:functional": "playwright test -c playwright.config.ts --project functional",
    "test:playwright:headed": "playwright test -c playwright.config.ts --project headed",
    "test:playwright:perf": "playwright test -c playwright.config.ts --project perf",
    "typecheck": "tsc --noEmit",
    "fmt": "prettier --check .",
    "fmt:fix": "prettier --write --cache .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@happy-dom/global-registrator": "^15.11.0",
    "@playwright/test": "^1.50.1",
    "@types/bun": "^1.3.2",
    "@xterm/headless": "^5.5.0",
    "@xterm/xterm": "^5.5.0",
    "mitata": "^1.0.34",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^4.5.4"
  }
}
